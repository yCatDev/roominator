@page "/apppage"
@inject NavigationManager NavManager
@code {

    private async void StartupMethod()
    {
        await OnAfterRenderAsync(true);
        if (NavManager.Uri.Contains("localhost"))
        {
            NavManager.NavigateTo("https://localhost:5000/login");
        }
        else
        {
            NavManager.NavigateTo("https://roominator-nure.herokuapp.com/login");
        }
    }

    private Task StartupTask()
    {
        return Task.CompletedTask;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        Program.mobileHelper.SetEntry(Entry.APK);
        StateHasChanged();
    }

    protected override async Task OnInitializedAsync()
    {
        StartupMethod();
        await StartupTask();
    }

}
